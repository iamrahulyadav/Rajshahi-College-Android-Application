<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add__notice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hppc.rcderectory.notice_board.ADD_NOTICE"
    android:orientation="vertical"
    >

        <EditText
            android:id="@+id/upn_title"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Enter Notice Title"
            />

        <EditText
            android:id="@+id/upn_dname"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Department Name"

            />

        <EditText
            android:id="@+id/upn_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Date"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/upn_details"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Details"
            android:layout_weight="1"
            android:gravity="top"
            />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
                <Button
                    android:text="Submit Notice"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:background="@drawable/button_background"
                    android:textColor="#ffffff"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:onClick="upn_submit"
                    android:layout_marginRight="2dp"
                    />

                <Button
                    android:text="Clear Text"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:background="@drawable/button_background"
                    android:textColor="#ffffff"
                    android:layout_width="183dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/button4"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    android:onClick="clear_text"
                    />
        </LinearLayout>

</LinearLayout>
